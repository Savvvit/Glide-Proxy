# GlideProxy Configuration Example
# Copy this file to .env and customize for your setup

# Environment
NODE_ENV=production
PORT=3000

# Target Configuration
TARGET_HOST=your-target-domain.com
TARGET_PROTOCOL=https
TARGET_PORT=443

# Proxy Configuration
PROXY_DOMAIN=your-proxy-domain.com
PROXY_TIMEOUT=30000
PROXY_RETRIES=3

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
TRUST_PROXY=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# URL Rewriting Configuration
ENABLE_URL_REWRITE=true
REWRITE_HTML=true
REWRITE_CSS=true
REWRITE_JS=true

# SSL Configuration (automatically managed by installer)
SSL_EMAIL=your-email@domain.com

# PM2 Configuration
MAX_MEMORY_RESTART=512M
INSTANCES=1
RESTART_DELAY=4000

# nginx Configuration
RATE_LIMIT_REQUESTS_PER_SECOND=10
MAX_BODY_SIZE=10M
CLIENT_TIMEOUT=30s 